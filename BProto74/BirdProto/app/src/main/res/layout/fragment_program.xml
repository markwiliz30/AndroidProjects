<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

            <TextView
                android:id="@+id/pgm_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Program List"
                android:textSize="30dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="10dp"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/pgm_recycler"
                android:layout_width="match_parent"
                android:layout_height="297dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="20dp"></android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Program: "/>
        <TextView
            android:id="@+id/pgm_pgm_pos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:layout_marginRight="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="of "/>

        <TextView
            android:id="@+id/pgm_pgm_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XX"
            android:layout_marginRight="10dp"/>
    </LinearLayout>

</LinearLayout>